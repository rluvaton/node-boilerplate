{
  "name": "node-boilerplate",
  "version": "0.0.0-development",
  "description": "NodeJS boilerplate with TypeScript, Jest, ESLint, Prettier, Husky, CommitLint, CI in GitHub Action",
  "keywords": ["boilerplate", "prettier", "eslint", "husky", "commitlint", "typescript", "fastify", "vitest"],
  "files": ["lib"],
  "type": "module",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc -p tsconfig.build.json",
    "build:tests": "tsc -p tsconfig.json",
    "clean": "rimraf lib",
    "start": "ts-node-esm src/index.ts",
    "test": "vitest run",
    "check": "biome check .",
    "check:apply": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^24.3.0",
    "expect-http-client-matchers": "^2.2.0",
    "http-status": "^2.1.0",
    "husky": "^9.1.7",
    "jest-extended": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^24.2.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "release": {
    "branches": ["main"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rluvaton/node-boilerplate.git"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "npm-check-updates": "^18.0.2",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.1",
    "zod-validation-error": "^4.0.1"
  }
}
