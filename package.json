{
  "name": "node-boilerplate",
  "version": "0.0.0-development",
  "description": "NodeJS boilerplate with TypeScript, Jest, ESLint, Prettier, Husky, CommitLint, CI in GitHub Action",
  "keywords": ["boilerplate", "prettier", "eslint", "husky", "commitlint", "typescript", "fastify", "vitest"],
  "files": ["lib"],
  "type": "module",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc -p tsconfig.build.json",
    "build:tests": "tsc -p tsconfig.json",
    "clean": "rimraf lib",
    "start": "ts-node-esm src/index.ts",
    "test": "vitest run",
    "check": "biome check .",
    "check:apply": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@faker-js/faker": "^7.6.0",
    "@types/node": "^18.15.11",
    "@vitest/coverage-c8": "^0.30.0",
    "expect-http-client-matchers": "^2.2.0",
    "http-status": "^1.6.2",
    "husky": "^8.0.3",
    "jest-extended": "^3.2.4",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^21.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.30.0"
  },
  "release": {
    "branches": ["main"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rluvaton/node-boilerplate.git"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "fastify": "^4.15.0",
    "fastify-plugin": "^4.5.0",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "zod": "^3.21.4",
    "zod-validation-error": "^1.3.0"
  }
}
