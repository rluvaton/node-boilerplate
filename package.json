{
  "name": "node-boilerplate",
  "version": "0.0.0-development",
  "description": "NodeJS boilerplate with TypeScript, Jest, ESLint, Prettier, Husky, CommitLint, CI in GitHub Action",
  "keywords": ["boilerplate", "prettier", "eslint", "husky", "commitlint", "typescript", "fastify", "vitest"],
  "files": ["lib"],
  "type": "module",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc -p tsconfig.build.json",
    "build:tests": "tsc -p tsconfig.json",
    "clean": "rimraf lib",
    "start": "tsx src/index.ts",
    "test": "mocha",
    "check": "biome check .",
    "check:apply": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^10.0.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.1",
    "@types/sinon": "^17.0.4",
    "execa": "^9.6.0",
    "expect-http-client-matchers": "^2.2.0",
    "expect-matchers": "^1.2.0",
    "http-status": "^2.1.0",
    "husky": "^9.1.7",
    "is-port-reachable": "^4.0.0",
    "jest-each": "^30.1.0",
    "jest-extended": "^6.0.0",
    "mocha": "^11.7.2",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^24.2.8",
    "sinon": "^21.0.0",
    "sinon-jest-matchers": "^1.2.0",
    "typescript": "^5.9.2"
  },
  "release": {
    "branches": ["main"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rluvaton/node-boilerplate.git"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.0.1",
    "npm-check-updates": "^18.1.1",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.20.5",
    "zod": "^4.1.9",
    "zod-validation-error": "^4.0.1"
  }
}
