{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "ES2022",
    "target": "es2022",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "src",
    "test",
    "typings"
  ],
  "files": ["vitest.d.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true
  }
}
